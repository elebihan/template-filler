using Gtk 4.0;

template $VariablesView : Gtk.Box {
  orientation: vertical;
  vexpand: true;
  Gtk.ScrolledWindow {
    Gtk.Box {
      orientation: vertical;
      spacing: 12;
      Gtk.ColumnView column_view {
        hexpand: true;
        vexpand: true;
        single-click-activate: false;
        Gtk.ColumnViewColumn column_name {
          title: _("Name");
          expand: true;
        }
        Gtk.ColumnViewColumn column_value {
          title: _("Value");
          expand: true;
        }
      }
    }
  }
}
